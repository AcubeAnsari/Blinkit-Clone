

@model Temp.Models.Category

<div class="form-design">
    <div class="container">
        <div class="row">

        <form asp-action="Create" enctype="multipart/form-data">
            
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Image" class="control-label">Image</label>
                    <input type="file" name="photo" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ShortOrder" class="control-label">ShootOrder</label>
                    <input asp-for="ShortOrder" class="form-control" />
                    <span asp-validation-for="ShortOrder" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>

        </form>
        </div>
    </div>
</div>


